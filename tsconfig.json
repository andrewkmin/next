{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "es5",
    "allowJs": true,
    "jsx": "preserve",
    "module": "esnext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "typeRoots": [
      "src/types/**/*.d.ts"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
